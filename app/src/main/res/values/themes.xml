<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">?color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="android:textColorPrimary">@color/color_text</item>
        <item name="colorOnPrimary">@color/color_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_white</item>
        <item name="colorOnSecondary">@color/color_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_dark</item>
        <!-- Customize your theme here. -->
        <item name="color_primary">@color/color_primary</item>
        <item name="nested_scroll_view_color">@color/pod_fragment_nested_scroll_view_color</item>
        <item name="color_typical_text">@color/color_text</item>
    </style>
    <style name="Theme.BlackAndWhite" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">?color_primary</item>
        <item name="colorPrimary">?color_primary</item>
        <item name="colorPrimaryVariant">?color_primary</item>
        <item name="android:textColorPrimary">?color_white</item>
        <item name="colorOnPrimary">?color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?color_primary</item>
        <item name="colorSecondaryVariant">?color_primary</item>
        <item name="colorOnSecondary">?color_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?color_primary</item>
        <!-- Customize your theme here. -->
        <item name="color_primary">@color/color_black</item>
        <item name="color_white">@color/color_white</item>
        <item name="nested_scroll_view_color">?color_white</item>
        <item name="color_typical_text">?color_primary</item>
    </style>
    <style name="Theme.Red" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/color_primary_dark_red</item>
        <item name="colorPrimary">?color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_red</item>
        <item name="android:textColorPrimary">?color_white</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_red</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_red</item>
        <item name="colorOnSecondary">@color/color_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_dark_red</item>
        <!-- Customize your theme here. -->
        <item name="color_primary">@color/color_primary_red</item>
        <item name="color_white">@color/color_white</item>
        <item name="nested_scroll_view_color">?color_white</item>
        <item name="color_typical_text">@color/color_black</item>
    </style>
</resources>